{
    "main": "main.js",
    "name": "dentist-ui",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build:angular": "ng build --output-path=dist/DentistUI --configuration production --base-href ./",
        "electron": "electron .",
        "build": "npm run build:angular && electron .",
        "publish-api": "dotnet publish ../DentalClinic.API/DentalClinic.API.csproj -c Release -o ./api-publish",
        "electron:build": "npm run build:angular && electron-builder",
        "watch": "ng build --watch --configuration development",
        "test": "ng test"
    },
    "dependencies": {
        "@angular/common": "^20.0.0",
        "@angular/compiler": "^20.0.0",
        "@angular/core": "^20.0.0",
        "@angular/forms": "^20.0.0",
        "@angular/platform-browser": "^20.0.0",
        "@angular/router": "^20.0.0",
        "@fortawesome/fontawesome-free": "^7.0.0",
        "angular-feather": "^6.5.1",
        "feather-icons": "^4.29.2",
        "rxjs": "~7.8.0",
        "tslib": "^2.3.0",
        "xlsx": "^0.18.5",
        "zone.js": "~0.15.0"
    },
    "devDependencies": {
        "@angular/build": "^20.0.2",
        "@angular/cli": "^18.0.7",
        "@angular/compiler-cli": "^20.0.0",
        "@types/jasmine": "~5.1.0",
        "@types/xlsx": "^0.0.35",
        "autoprefixer": "^10.4.21",
        "electron": "^37.2.3",
        "electron-builder": "^26.0.12",
        "jasmine-core": "~5.7.0",
        "karma": "~6.4.0",
        "karma-chrome-launcher": "~3.2.0",
        "karma-coverage": "~2.2.0",
        "karma-jasmine": "~5.1.0",
        "karma-jasmine-html-reporter": "~2.1.0",
        "postcss": "^8.5.6",
        "tailwindcss": "^3.4.17",
        "typescript": "~5.8.2"
    },
    "build": {
        "appId": "com.dentist.ui",
        "productName": "Dentist UI",
        "copyright": "Â© 2025 Ahmed Khaled",
        "icon": "icon.ico",
        "files": [
            "dist/**/*",
            "main.js",
            "src/splash.html",
            "assets/**/*",
            "splash.html",
            "icon.png",
            "electron-api/**/*",
            "src/icon.ico"
        ],
        "extraResources": [
            {
                "from": "electron-api/",
                "to": "electron-api",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "directories": {
            "buildResources": "assets"
        },
        "win": {
            "target": "nsis",
            "icon": "assets/icons/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "Dental Clinic"
        }
    }
}
